<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/loginPhone"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="26dp"
        android:hint="PhoneWithCountryCode"
        android:inputType="phone"
        android:maxLength="13"
        android:shadowColor="#673AB7"
        android:text="+91"
        tools:text="+911234567890" />

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="150dp"
        android:inputType="number"
        android:hint="Code"
        android:maxLength="6"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        tools:text="1234567890" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginPhone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:text="Please Verify By Entering Phone Number Above"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendCodeButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="15dp"
        android:text="Press Verify Button Below If Auto Detection Fails!"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sendCodeButton"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:layout_alignBaseline="@id/loginPhone"
        android:layout_alignRight="@id/loginPhone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="-125dp"
        android:layout_toEndOf="@+id/loginPhone"
        android:text="Send code"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />


    <Button
        android:id="@+id/verifyButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="112dp"
        android:text="Verify"
        android:textAlignment="center"
        android:textColor="#4CAF50" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="186dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="184dp"
        android:outlineAmbientShadowColor="@android:color/holo_green_dark"
        android:visibility="invisible" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verifyButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="112dp"
        android:text="Registration" />

</RelativeLayout>